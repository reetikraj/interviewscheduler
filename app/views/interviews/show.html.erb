<p id="notice"><%= notice %></p>

<h2>Interviewer Details</h2>
<p>
    Name: <%= @interview.interviews_users.where(:role => 0).first.user.name %> <br>
    Email: <%= @interview.interviews_users.where(:role => 0).first.user.email %> <br>
</p>

<h2>Candidate Details</h2>
<p>
    Name: <%= @interview.interviews_users.where(:role => 1).first.user.name %> <br>
    Email: <%= @interview.interviews_users.where(:role => 1).first.user.email %> <br>
    Resume: <%= link_to 'link',  @interview.interviews_users.where(:role => 1).first.user.resume.url %> <br>
   
</p>

<h2>Interview Details</h2>
<p>
    Date: <%= @interview.interview_date.strftime("%d %b %y") %> <br>
    Start Time: <%= @interview.start_time.strftime("%H:%M") %> <br>
    End Time: <%= @interview.end_time.strftime("%H:%M") %>
</p>


